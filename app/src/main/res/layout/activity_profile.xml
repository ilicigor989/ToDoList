<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ScrollView
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/chip_style"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">

            <android.support.design.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        </ScrollView>

        <android.support.v7.widget.RecyclerView
            android:layout_margin="3dp"
            android:id="@+id/contacts_RV"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:background="@drawable/contact_list_style"
            android:layout_height="wrap_content"/>

        <android.support.v4.view.ViewPager
            android:layout_height="100dp"
            android:id="@+id/add_spot"
            android:background="@drawable/ad_spot_style"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="@dimen/viewpager_margin_fix"
            />

    </LinearLayout>

</LinearLayout>